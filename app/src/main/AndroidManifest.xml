<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.saidamusicalstructure">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"

        android:icon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SongsActivity"
            android:label="@string/category_song" />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_album" />
        <activity
            android:name=".NowPlayActivity"
            android:label="@string/playing" />
        <activity android:name=".AlbumContentActivity" android:label="Songs"/>
    </application>

</manifest>